# PhraseWorks Environment Configuration Template
# Copy this file to .env and replace with your actual values

# Security Keys (REQUIRED)
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string
AUTH_SECRET=your-auth-secret-here-generate-another-strong-random-string

# Database Configuration (REQUIRED)
DATABASE_URL=postgres://username:password@host:5432/database_name
DATABASE_USER=your_database_user

# Site Configuration
SITE_URL=http://localhost
SITE_NAME=Your Site Name
PHRASE_WORKS_VERSION=1.0.1

# Cloudflare R2 Storage (REQUIRED for media uploads)
R2_PUBLIC_URL=https://your-r2-bucket.r2.dev/
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your-bucket-name
R2_TOKEN=your-r2-token

# SMTP Email Configuration (Optional)
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_AUTHTYPE=login
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_SECURE=false

# Default Email Settings
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=Your Site Name

# Redis Cache (Optional)
REDIS_URL=redis://redis:6379

# Additional Email Providers (Optional)
# BREVO_API_KEY=your-brevo-api-key
# MAILGUN_API_KEY=your-mailgun-api-key
# RESEND_API_KEY=your-resend-api-key