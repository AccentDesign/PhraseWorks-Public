{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev-docker-backend\" \"npm:dev-main-backend\"",
    "dev-main-backend": "nodemon --verbose --watch src --ignore src/plugins --ignore src/generated --exec node src/index.js",
    "dev-docker-backend": "docker-compose -f docker-compose.yml up",
    "version": "nodemon --dump | grep -A 20 ignore",
    "start": "node src/index.js",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "generate:plugins": "node src/utils/generatePluginResolver.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@cf-wasm/photon": "^0.1.30",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "@hono/node-server": "^1.15.0",
    "adm-zip": "^0.5.16",
    "concurrently": "^9.2.1",
    "dataloader": "^2.2.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.1.0",
    "form-data": "^4.0.4",
    "graphql": "^16.11.0",
    "graphql-http": "^1.22.4",
    "graphql-upload": "^17.0.0",
    "hono": "^4.7.10",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.3",
    "mime": "^4.0.7",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "php-serialize": "^5.1.3",
    "postgres": "^3.4.7",
    "resend": "^4.5.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.3",
    "sib-api-v3-sdk": "^8.5.0",
    "wordpress-hash-node": "^1.0.0",
    "worker-mailer": "^1.1.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "esbuild": "^0.25.6",
    "wrangler": "^4.4.0"
  }
}
